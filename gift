<script>
const questions = [
    "ä½ ä»Šå¤©æ˜¯ä¸æ˜¯ç‰¹åˆ«å¯çˆ±ï¼ŸğŸ˜†",
    "ä½ æ˜¯ä¸æ˜¯å·å·ç…§é•œå­äº†ï¼Ÿ",
    "ä½ è§‰å¾—è‡ªå·±å¥½çœ‹å—ï¼Ÿ",
    "å¦‚æœæ»¡åˆ†æ˜¯ 10 åˆ†ï¼Œä½ ç»™è‡ªå·±æ‰“ 11 åˆ†å—ï¼Ÿ",
    "è®¤çœŸå›ç­”ï¼šä½ æ˜¯ä¸æ˜¯ä»™å¥³ä¸‹å‡¡ï¼ŸğŸ§šâ€â™€ï¸"
];

let index = 0;

function showQuestion() {
    if (index < questions.length) {
        box.innerHTML = `
            <h2>${questions[index]}</h2>
            <button class="yes" onclick="next()">æ˜¯</button>
            <button class="no">å¦</button>
        `;
    } else {
        showFinalQuestion();
    }
}

function next() {
    index++;
    showQuestion();
}

function showFinalQuestion() {
    box.innerHTML = `
        <h2>ğŸª é­”é•œé­”é•œï¼Œè°æ˜¯è¿™ä¸ªä¸–ç•Œä¸Šæœ€ç¾ä¸½çš„å¥³äººï¼Ÿ</h2>
        <button class="yes" onclick="showTree()">æ™“æ™¶</button>
        <button class="yes" onclick="showTree()">æ™“æ™¶</button>
    `;
}

function showTree() {
    box.innerHTML = `
        <h1>ğŸ„ åœ£è¯å¿«ä¹ ğŸ„</h1>
        <pre style="font-size:20px; line-height:1.2">
            â˜…
           ***
          *****
         *******
        *********
            |
        </pre>
        <h2>âœ¨ æœ€ç¾çš„å°±æ˜¯ä½  âœ¨</h2>
    `;
    startFireworks();
}

const canvas = document.getElementById("fireworks");
const ctx = canvas.getContext("2d");
canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

let fireworks = [];

function Firework() {
    this.x = Math.random() * canvas.width;
    this.y = canvas.height;
    this.radius = Math.random() * 3 + 2;
    this.color = `hsl(${Math.random() * 360},100%,60%)`;
    this.vx = (Math.random() - 0.5) * 4;
    this.vy = Math.random() * -8 - 6;
}

function startFireworks() {
    setInterval(() => {
        fireworks.push(new Firework());
    }, 200);

    requestAnimationFrame(update);
}

function update() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    fireworks.forEach((f, i) => {
        f.x += f.vx;
        f.y += f.vy;
        f.vy += 0.1;
        ctx.beginPath();
        ctx.arc(f.x, f.y, f.radius, 0, Math.PI * 2);
        ctx.fillStyle = f.color;
        ctx.fill();
        if (f.y > canvas.height) fireworks.splice(i, 1);
    });
    requestAnimationFrame(update);
}

showQuestion();
</script>
